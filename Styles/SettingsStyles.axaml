<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Styles pour les paramÃ¨tres -->
    <Style Selector="Border.setting-panel">
        <Setter Property="Background" Value="#15FFFFFF"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.2"/>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>
    
    <Style Selector="Border.setting-panel:pointerover">
        <Setter Property="Background" Value="#22FFFFFF"/>
        <Setter Property="RenderTransform" Value="scale(1.005)"/>
    </Style>
    
    <Style Selector="TextBox.setting-input">
        <Setter Property="Margin" Value="0,8,0,0"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>
    
    <Style Selector="Slider.setting-slider">
        <Setter Property="Margin" Value="0,12,0,4"/>
    </Style>
    
    <!-- Styles pour les notifications -->
    <Style Selector="Border.notification">
        <Setter Property="Background" Value="#333333"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="Margin" Value="0,0,0,20"/>
        <Setter Property="Opacity" Value="0"/>
        <Setter Property="BoxShadow" Value="0 2 10 0 #40000000"/>
        <Setter Property="Transitions">
            <Transitions>
                <DoubleTransition Property="Opacity" Duration="0:0:0.3"/>
            </Transitions>
        </Setter>
    </Style>
    
    <Style Selector="TextBlock.notification-text">
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
</Styles>
